doctype html
html
  head
    title Event and Weather Planner
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/styles.css")
  body
    .container.mt-5
      h1.text-center.mb-4 Event and Weather Planner
      form(action="/" method="GET", class="bg-white p-4 rounded shadow")
        .mb-3
          label.form-label(for="location") Location:
          input.form-control(type="text", id="location", name="location", placeholder="Enter location")
        button.btn.btn-primary.w-100(type="submit") Get Weather and Events

      // Display weather data if available
      if weather
        .mt-4
          h3 Weather Info for #{city}  
          p Temperature: #{weather.temp}Â°C
          p Description: #{weather.weather.description}
      else
        p No weather data available.

      // Event recommendations
      h4 Event Recommendations
      if events && events.length > 0
        ul
          each event in events
            li
              h5= event.name
              p Description: #{event.description}
              p Location: #{event.location}
              p Time: #{event.time}
              p Address: #{event.address}
              span (Type: #{event.type})
      else
        p No events found. Please enter a location.

    // Debugging: Log data in the browser's console (Optional for troubleshooting)
    script.
      
      var cityName = "#{city}";  
      var eventsData = #{JSON.stringify(events)};

      
      console.log("City:", cityName);
      console.log("Events:", eventsData);
