doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/styles.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
  body
    header.mb-4
      nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
        .container
          a.navbar-brand(href="/") Event Planner
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse.justify-content-end
            ul.navbar-nav
              li.nav-item
                a.nav-link.active(href="/") Home
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#" role="button", data-bs-toggle="dropdown") Menu
                ul.dropdown-menu
                  li
                    a.dropdown-item(href="/") Home
                  li
                    a.dropdown-item(href="/about") About

    main.container
      block content

    footer
      p © Adil Surve 2025 — All rights reserved.
